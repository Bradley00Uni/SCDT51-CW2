@model ITS_Support.Models.AssetViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AssetModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Asset.Id" />
            <input type="hidden" asp-for="Asset.Room" />
            <input type="hidden" asp-for="Asset.CreatedAt" />
            <input type="hidden" asp-for="Asset.RoomId" />
            <input type="hidden" asp-for="Asset.Creator" />
            <div class="form-group">
                <label asp-for="Asset.Name" class="control-label"></label>
                <input asp-for="Asset.Name" class="form-control" />
                <span asp-validation-for="Asset.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.Asset.Type, Model.TypeList, Model.Asset.Type, new { @class = "form-select" })
                <span asp-validation-for="Asset.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
